<div class="container">
  <div class="row jumbotron">
    <% if logged_in? %>
      <div class="row">
        <aside class="col-xs-5">
          <div class="user-tab">
            <section class = "user-info">
            <%= render 'shared/user_info' %>
            </section>
            <section class="stats">
            <%= render 'shared/stats' %>
            </section>
            <section class = "micropost-form">
            <%= render 'shared/micropost_form' %>
            </section>
          </div>
        </aside>
        <div class="col-xs-7 ">
          <div class="row">
          <h2 style="text-decoration-line: underline; color: #777777;text-align: center;">Feeds</h2>
            <%= render 'shared/feed' %>
          </div>
        </div>
        <div class="paginate-style text-center"><%= will_paginate @feed_items %></div>
      </div>
    <% else %>
      <h1>Welcome</h1>
      <p>This is the home page for the <a href="http://www.railstutorial.org/"> Ruby on Rails Tutorial </a> sample application.</p>
      <%= link_to "Sign Up" , signup_path , class: "btn btn-primary btn-lg" %>
    <% end %>
  </div>
<!--  <div><%#= link_to image_tag("rails.png", alt: "Rails logo"), 'http://rubyonrails.org/' %></div>-->
</div>
