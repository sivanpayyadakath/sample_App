<li id="micropost-<%= micropost.id %>">
   <%#= gravatar_for(micropost.user) %>
<!--    <span class="user"><%#= link_to micropost.user.name , micropost.user %>-->
    <h2 class="content"><%= micropost.content %></h2>
  <%= image_tag micropost.picture.url if micropost.picture? %>
    <span class="timestamp">
      <%= gravatar_for(micropost.user) %><%= link_to micropost.user.name , micropost.user %> posted <%= time_ago_in_words(micropost.created_at) %> ago
    <% if current_user?(micropost.user) %>
        <span><%= link_to "delete", micropost, method: :delete,class:"glyphicon glyphicon-trash",data: { confirm: "You sure" } %></span>
    <% end %>
    </span>
</li>
