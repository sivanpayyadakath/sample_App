<% provide(:title,"Reset Password") %>

<div class="container">
  <div class="jumbotron col-md-8 offset-md-2 ">
    <h1 class="center">Forgot Password</h1>
    <div class="row">
      <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>

        <%= hidden_field_tag :email,  @user.email %>
        <%= render 'shared/error_messages', object: f.object  %>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= render 'shared/error_messages_password', object: f.object  %>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
        <%= render 'shared/error_messages_password_confirmation', object: f.object  %>

        <%= f.submit "Submit", class: "btn btn-secondary btn-lg btn-block" %>
      <% end %>
    </div>
  </div>
</div>